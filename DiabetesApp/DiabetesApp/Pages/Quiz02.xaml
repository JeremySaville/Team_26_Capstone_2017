<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesApp.Quiz02">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="What is the normal blood glucose range for most people?" FontSize="Large" FontAttributes="Bold"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Margin="20"
                />
            <Label Text="Which of the following are important in the treatment of diabetes?" FontSize="Large" FontAttributes="Bold"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Margin="20"
                />
            <Label Text="If diabetes isn't treated, which of the following can happen?" FontSize="Large" FontAttributes="Bold"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Margin="20"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>