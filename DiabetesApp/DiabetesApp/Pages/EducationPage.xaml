                    <Label x:Name="label13" Text="Lesson 13 - Everyday Life" Grid.Row="11" Grid.Column="4" Grid.ColumnSpan="2" HorizontalTextAlignment="Center" Margin="2,2,2,6" TextColor="Black"/>

