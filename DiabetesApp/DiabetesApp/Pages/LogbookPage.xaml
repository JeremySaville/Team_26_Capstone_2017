<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesApp.LogbookPage"
             Style="{StaticResource pageStyle}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Logbook" FontSize="Large" TextColor="{StaticResource mainTextColour}" Margin="10" HorizontalOptions="Center"/>
                <Button x:Name="createButton" Text="Create Entry" Clicked="onClick_createEntry" Style="{StaticResource buttonStyle}"/>
                <Label Text="Logbook Entries" TextColor="{StaticResource mainTextColour}" FontSize="Medium" Margin="10"/>
                <ListView x:Name="logsList" ItemTapped="onClick_logEntryListItem" IsPullToRefreshEnabled="True" Refreshing="onRefresh">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding title}" Detail="{Binding description}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>