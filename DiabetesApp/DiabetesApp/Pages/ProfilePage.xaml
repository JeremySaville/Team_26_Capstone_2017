<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesApp.ProfilePage"
             Icon="ic_account_circle_white.png"
             Style="{StaticResource pageStyle}">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Label Text="Profile" FontSize="Large" HorizontalOptions="Center" TextColor="{StaticResource mainTextColour}"/>
            <TableView Intent="Data">
                <TableRoot x:Name="profileTable">
                    <TableSection Title="Statistics">
                        <TextCell x:Name="nLogs" Text="Number of Logs Made:"/>
                        <TextCell x:Name="lastLogTime" Text="Last Log Time:"/>
                    </TableSection>
                    <TableSection x:Name="gameStats" Title="Game Stats">
                        <!-- Add in stats for gamified version -->
                        <TextCell x:Name="level" Text="Level:"/>
                        <TextCell x:Name="xp" Text="Total Experience:"/>
                        <TextCell x:Name="xpNextLevel" Text="Experience to Next Level:"/>
                        <TextCell x:Name="coins" Text="Coins:"/>
                        <TextCell x:Name="logins" Text="Consecutive Days Logged in:"/>
                    </TableSection>
                    <TableSection x:Name="badges" Title="Badges">
                        <!-- Image cells? -->
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>