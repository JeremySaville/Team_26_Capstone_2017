<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesApp.ProfilePage"
             Icon="ic_account_circle_white.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Profile" FontSize="Medium" Margin="20" TextColor="{StaticResource mainTextColour}"/>
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection Title="Statistics">
                        <TextCell x:Name="nLogs" Text="Number of Logs Made:"/>
                    </TableSection>
                    <TableSection Title="Badges">
                        <!-- Image cells? -->
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>